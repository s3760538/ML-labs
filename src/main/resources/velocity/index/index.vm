#parse("/velocity/layout.vm")
#@mainLayout()

<h1>Search Movies</h1>
<form id="searchTitleForm" method="post">
    <label>Search by Show Title</label>
    <input type="text" name="showTitle" placeholder="Show Title" value="" required>
    <input type="submit" value="Search">
</form>

<form id="searchActorForm" method="post">
    <label>Search by Actor</label>
    <input type="text" name="actorName" placeholder="ActorName" value="" required>
    <input type="submit" value="Search">
</form>
#end